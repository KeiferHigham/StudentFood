datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // Load the PostgreSQL connection URL from .env file
}

generator client {
  provider = "prisma-client-js"
}

model Submissions {
  id                Int      @id @default(autoincrement())
  restaurantName    String
  restaurantAddress String
  discount          String
  latitude          Float
  longitude         Float
  verified          Boolean  @default(false)
  createdAt         DateTime @default(now())
}

model NearbyRestaurants {
  id                Int      @id @default(autoincrement())
  restaurantName    String
  restaurantAddress String
  @@unique([restaurantName, restaurantAddress])
}


